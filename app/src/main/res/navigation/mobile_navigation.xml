<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.supercompare.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_products_mobile"
        android:name="com.example.supercompare.ui.products.ProductsFragment"
        android:label="@string/nav_products"
        tools:layout="@layout/fragment_products" />

    <fragment
        android:id="@+id/nav_my_cart_mobile"
        android:name="com.example.supercompare.ui.cart.CartFragment"
        android:label="@string/nav_my_cart"
        tools:layout="@layout/fragment_my_cart" />

    <fragment
        android:id="@+id/nav_logout_mobile"
        android:name="com.example.supercompare.ui.logout.LogoutFragment"
        android:label="@string/nav_logout"
        tools:layout="@layout/fragment_logout" />

</navigation>